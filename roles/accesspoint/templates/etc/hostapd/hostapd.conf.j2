# directly stolen from https://wiki.gentoo.org/wiki/Hostapd

# the interface used by the AP
interface=ap0
# "g" simply means 2.4GHz band
hw_mode=g
# the channel to use
channel={{ accesspoint_channel }}
# limit the frequencies used to those allowed in the country
ieee80211d={{ accesspoint_ieee80211d }}
# the country code
country_code={{ accesspoint_country_code }}
# 802.11n support
ieee80211n=1
# QoS support, also required for full speed on 802.11n/ac/ax
wmm_enabled=1

# the name of the AP
ssid={{ accesspoint_ssid }}
# 1=wpa, 2=wep, 3=both
auth_algs=1
# WPA2 only
wpa=2
wpa_key_mgmt=WPA-PSK
rsn_pairwise=CCMP
wpa_passphrase={{ accesspoint_wpa_passphrase }}

